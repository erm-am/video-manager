// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Upload {
  id          Int    @id @default(autoincrement())
  upload_hash String @unique @db.Char(32)
  amount      Int
  files       File[]
  user        User   @relation(fields: [user_id], references: [id])
  user_id     Int
  status      String @db.Char(255)

  @@map(name: "uploads")
}

model File {
  id                   Int     @id @default(autoincrement())
  name                 String  @db.Char(255)
  status               String  @db.Char(255)
  width                Int?
  height               Int?
  duration             Float?
  bit_rate             Int?
  display_aspect_ratio String? @db.Char(255)
  upload_id            Int
  upload               Upload  @relation(fields: [upload_id], references: [id])

  @@map(name: "files")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String   @unique @db.Char(255)
  password String   @db.Char(255)
  uploads  Upload[]

  @@map(name: "users")
}
